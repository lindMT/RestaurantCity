<html>
    <head>
        <%- include("partials/libraryImports") -%>
        <title>Restaurant City</title>        
    </head>
    
    <body>
        <div class="login-bg">
            <div class="login-box shadow">
                <h1>Welcome to RestaurantCity!</h1>
                <form action="/login" method="POST">
                    
                    <div class="form-group">
                        Username
                        <input type="text" class="form-control" name="userName" placeholder="Enter username">
                    </div>
                    <div class="form-group">
                        Password
                        <input type="password" class="form-control" name="password" placeholder="Password">
                    </div>
                         
                    <div class="centered">               
                        <button class="btn btn-primary" type="submit" data-toggle="modal" data-target="#exampleModal">Login</button>
                        
                        <div class="text-center" style="padding-top: 0.7rem;">
                            <%=loginPrompt%>
                        </div>
                    </div>
                    
                </form> 
            </div>
        </div>
    </body>   

</html>