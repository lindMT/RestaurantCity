<html>
    <head>
        <%- include("partials/libraryImports") -%>
        <title>Restaurant City</title>        
    </head>
    
    <body>
        <div class="login-bg">
            <div class="login-box">
                <h1>Welcome to RestaurantCity!</h1>
                <form action="/login" method="POST">
                    
                    <div class="form-group">
                        Username
                        <input type="text" class="form-control" name="userName" placeholder="Enter username">
                    </div>
                    <div class="form-group">
                        Password
                        <input type="password" class="form-control" name="password" placeholder="Password">
                    </div>
                                        
                    <button class="btn btn-primary" type="submit"  data-toggle="modal" data-target="#exampleModal">Login</button>
                </form> 
            </div>      
        </div>

    </body>   

</html>

<% if(loginStatus == "Wrong") { %>
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            alert("Wrong Credentials");
        });
    </script>
<% } %>
