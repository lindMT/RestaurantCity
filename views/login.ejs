<html>
    <head>
        <%- include("partials/libraryImports") -%>
        <title>Restaurant City</title>        
    </head>
    
    <body>
        <div class="login-bg">
            <div class="login-box shadow">
                <h1 style="margin-top: 35px;">Welcome to RestaurantCity!</h1>
                <br/>
                <form action="/login" method="POST">
                    
                    <div class="form-group">
                        Username
                        <input type="text" class="form-control" name="userName" placeholder="Enter username" style="margin-bottom: 25px;">
                    </div>

                    <div class="form-group" style="margin-top: 5px;">
                        Password
                        <input type="password" class="form-control" name="password" placeholder="Enter Password">
                    </div>
                         
                    <div class="centered">               
                        <button class="btn btn-primary" style="width: 65%;" type="submit" data-toggle="modal" data-target="#exampleModal">Login</button>
                    </div>

                    <div class="centered">
                        <% if(error_msg != null || error_msg != undefined) { %>    
                            <p style="color:red; font-weight:bold; margin-top: 15px; text-align: center;"> <%= error_msg %> </p>
                        <% } %>
                    </div>

                </form> 
            </div>
        </div>
    </body>   

</html>