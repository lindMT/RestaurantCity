<%- include("partials/header") -%>

    <!-- TODO: Add later to CSS file -->
    <style>
        #add-ni-card {
            margin: auto;
            width: 700px;
        }
    </style>
    <div id="add-ni-card" class="card shadow">
        <div>
            <h1 style="text-align: center; padding: 5px;">Add New Ingredient</h1>
        </div>
        <hr/>
        <div>
            <p style="text-align: center;">Fill-out ALL required input fields for the details of the NEW ingredient.</p>
            <p style="text-align: center;">You are adding a new ingredient to the inventory with the name: <b style="color:rgb(0, 138, 189); text-transform: uppercase;"><u><%= ingredient %></u></b></p>
            <br/>
        </div>
        <form method="post" action="/addNewIngredient/p2/process">
            <!-- Hidden input field to pass the ingredient name -->
            <input type="hidden" name="ingredientName" value="<%= ingredient %>">

            <div class="form-group form-align-left">
                <label>Category</label>
                <select id="add-ni-category-select" name="ingreCategory" onchange="changeOptions2()" class="form-select form-select-md" style="width: 100%;" required>
                <option disabled selected value> -- Select a category -- </option>
                <option value="wet">Wet Ingredient</option>
                <option value="dry">Dry Ingredient</option>
            </select>
            </div>
            <br/>

            <div class="form-group form-align-left">
                <label>Sizing Option Name <i>(Optional)</i></label>
                <input type="text" name="ingreVariantName" placeholder="e.g. Small, Large, Coke Sakto" min="1" class="form-control" style="text-align: left; width: 100%;">
            </div>
            <br/>

            <div class="form-group form-align-left">
                <label>Net Weight</label>
                <input type="number" name="ingreNetWt" placeholder="Minimum: 1" min="1" class="form-control" style="text-align: left; width: 100%;" required>
            </div>
            <br/>

            <div class="form-group form-align-left">
                <label>Unit</label>
                <select id="add-ni-unit" name="ingreUnit" class="form-select form-select-md" style="width: 100%;" required>
                <option disabled selected value> -- Select Unit -- </option>
            </select>
            </div>
            <br/>
            <div class="form-group form-align-left">
                <label>Quantity</label>
                <input type="number" name="ingreQty" placeholder="Minimum: 1" min="1" max="10" class="form-control" style="text-align: left; width: 100%;" required>
            </div>
            <br/>

            <hr/>
            <button type="submit" class="btn btn-submit-count" style="width: 100%;">Add to Inventory</button>
        </form>

        <button class="btn btn-secondary" style="color:white; width: 100%;" onclick="history.back()">Return to Previous page</button>
    </div>

    <script src="/js/addNewIngredient.js"></script>

    <%- include("partials/footer") -%>