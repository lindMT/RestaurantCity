<%- include("partials/header") -%>

    <div class="card-holder">
        <div class="card d-flex flex-column text-left" style="min-width: 30vw; min-height: 10vw;">
            <div class="card-body d-flex flex-column">

                <div class="form-align-left"  style="color: #818181;">
                    <a href="/userLanding">
                        <i class="fa-solid fa-arrow-left fa-lg" style="color: #818181;"></i>
                        Back
                    </a>
                </div>

                <h1 id="content-title">User Management</h1>
                <hr>
                
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th scope="col" class="col-md-3">Employee</th>
                            <th scope="col" class="col-md-6">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Lind Tan</td>
                            <td>
                                <div class="btn-group" role="group" aria-label="First group">
                                    <button type="button" 
                                            style="background-color: #CD9211 !important; color: white" 
                                            class="btn btn-secondary"
                                            data-toggle="modal"
                                            data-target="#resetModal" >
                                        Reset Password
                                    </button>
                                    <button type="button" 
                                            style="background-color: #CE3737 !important; color: white" 
                                            class="btn btn-secondary"
                                            data-toggle="modal"
                                            data-target="#removeModal" >
                                        Remove
                                    </button>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>John Doe</td>
                            <td>
                                <div class="btn-group" role="group" aria-label="First group">
                                    <button type="button" style="background-color: #CD9211 !important; color: white" class="btn btn-secondary">
                                        Reset Password
                                    </button>
                                    <button type="button" style="background-color: #CE3737 !important; color: white" class="btn btn-secondary">
                                        Remove
                                    </button>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>Jane Doe</td>
                            <td>
                                <div class="btn-group" role="group" aria-label="First group">
                                    <button type="button" style="background-color: #CD9211 !important; color: white" class="btn btn-secondary">
                                        Reset Password
                                    </button>
                                    <button type="button" style="background-color: #CE3737 !important; color: white" class="btn btn-secondary">
                                        Remove
                                    </button>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>

                <div class="form-align-left"  style="color: #41A162;">
                    <a href="/createUser" style="color: #41A162;">
                        <i class="fa-solid fa-user-plus fa-lg" style="color: #41A162;"></i>
                        Add Users
                    </a>
                </div>

            </div>
        </div>
    </div>

    <div class="modal fade" id="resetModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                <h4 class="modal-title" id="dishName"><p contenteditable="true">Lind Tan</p></h4>
                
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                </div>
                <div class="modal-body">
                    
                    <div class="form-group form-align-left">
                        New Password
                        <input type="password" class="form-control" name="password1" required>
                    </div>
    
                    <div class="form-group form-align-left">
                        Confirm New Password
                        <input type="password" class="form-control" name="password2" required>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" style="background-color: #CD9211 !important;" class="btn btn-primary">
                        Save changes
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="removeModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                <h4 class="modal-title" id="dishName"><p contenteditable="true">Lind Tan</p></h4>
                
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                </div>
                <div class="modal-body">
                    
                    Are you sure you want to remove this user? 

                </div>
                <div class="modal-footer">
                    <button type="button" style="background-color: #CE3737 !important;" class="btn btn-primary">
                        Confirm
                    </button>
                </div>
            </div>
        </div>
    </div>

<%- include("partials/footer") -%>