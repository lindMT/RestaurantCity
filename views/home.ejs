<%- include("partials/header") -%>

<% if (session.position == 'admin') {%> 
    <div class="card shadow">
        <div class="card-body d-flex flex-column">
            <h1>Notifications</h1> 
            <hr>
            
            <table class="table table-striped" style="width: 100%; margin: 0 auto;">
                <thead>
                    <tr>
                        <th scope="col" style="width: 40%;">Report</th>
                        <th scope="col" style="width: 30%;">Status</th>
                        <th scope="col" style="width: 20%;">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <%if (counter > 0){ %>
                     <tr>
                        <td style="text-transform: capitalize;">You have <%= counter %> dishes for approval</td>
                            <td class="table-warning">  
                                Immediate Action
                            </td>
                        <td>
                            <button class="viewReportBtn" type ="button" style="background:none; border:none;">
                                <a href="/approveDishes %>" style="color: black; text-decoration: none;">
                                    Approve Dishes</a>
                            </button></td>
                        </td>
                     </tr>
                     
                     <% } else {%>
                        <tr>  <td colspan="3" ><p style="font-weight:bold; margin-top: 15px; vertical-align: center; "> No Notifications for Today! </p></td></tr>
                       
                    <% }%>
                </tbody>
            </table>
        </div>    
    </div>
<% } %>
    <!-- View will depend on the User (Owner and Stock Controller)  -->
    
    <div class="card shadow">
        <div class="d-flex flex-column text-left" style="min-width: 75vw; min-height: 20vw;">
            <div class="card-body d-flex flex-column">
                <h1>Alerts</h1> 

                <hr>
                <table class="table table-striped" style="width: 100%; margin: 0 auto;">
                    <thead>
                        <tr>
                            <th scope="col" style="width: 40%;">Report</th>
                            <th scope="col" style="width: 30%;">Status</th>
                            <th scope="col" style="width: 20%;">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td style="text-transform: capitalize;">Ingredient Name has 0 stock</td>
                                <td class="table-danger">  
                                    Critical
                                </td>
                            <td>
                                
                                <button class="viewReportBtn" type ="button" style="background:none; border:none;">
                                    <a href="/recordAddtl/p1 %>" style="color: black; text-decoration: none;">
                                        Add Stock</a>
                                </button></td>
                            </td>
                         </tr>
                         <tr>
                            <td style="text-transform: capitalize;">Ingredient Name is low on stock (count)</td>
                                <td class="table-warning">  
                                    Immediate Action
                                </td>
                            <td>
                                
                                <button class="viewReportBtn" type ="button" style="background:none; border:none;">
                                    <a href="/recordAddtl/p1 %>" style="color: black; text-decoration: none;">
                                        Add Stock</a>
                                </button></td>
                            </td>
                         </tr>
                         
                    </tbody>
                </table>
            </div>        
        </div>        
    </div>
 
<script src="js/home.js"></script>
<%- include("partials/footer") -%>