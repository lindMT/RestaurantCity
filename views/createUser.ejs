<%- include("partials/header") -%>
    <div class="card-holder">
        <div class="card d-flex flex-column text-left" style="width: 25vw; min-height: 10vw;">
                
            <form action="/createUser" method="POST" >
                <h1>User Creation Form</h1>
                <div class="form-group password-form-group">
                    First Name
                    <input type="text" class="form-control" name="firstName" >
                </div>

                <div class="form-group password-form-group">
                    Last Name
                    <input type="text" class="form-control" name="lastName" >
                </div>

                <div class="password-confirm">
                    <button class="btn btn-primary w-100" type="submit" data-toggle="modal" data-target="#exampleModal">Create User</button>
                </div>           
            </form>

            <%=createUserPrompt%>

        </div>    
    </div>

<%- include("partials/footer") -%>