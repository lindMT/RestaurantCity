<%- include("partials/header") -%>

    <!-- TODO: Add later to CSS file -->
    <style>
        #add-ni-card {
            margin: auto;
            width: 600px;
        }
        
        .ingredient-details {
            text-align: center;
            font-size: 18px;
            margin-bottom: 20px;
        }
        
        .button-container {
            display: flex;
            flex-direction: column;
            gap: 10px;
            margin-top: 20px;
        }
        
        .btn-view-inventory {
            background-color: white;
            color: black;
            border: 1px solid black;
        }
    </style>

    <div id="add-ni-card" class="card shadow">
        <div>
            <h1 style="text-align: center; padding: 5px;">
                <%= title %>
            </h1>
        </div>
        <hr/>

        <div>
            <p style="color:rgb(0, 166, 0); text-align: center; font-size: 20px;">
                <b>
                    <%= message %>
                </b>
            </p>
            <br/>
        </div>

        <% if (ingredient !== null && ingredient !== undefined) { %>
            <div class="ingredient-details">
                <p>
                    <b><%= ingredient.totalNetWeight %> <%= unit.unitSymbol %> of </b><b style="text-transform: uppercase;"><%= ingredient.name %></b>
                    
                </p>
            </div>
            <% }%>
                <div class="button-container">
                    <a href="/addNewIngredient">
                        <button class="btn btn-submit-count" style="width: 100%;">Record Additional Purchase</button>
                    </a>
                    <a href="/viewInventory">
                        <button class="btn btn-submit-count btn-view-inventory" style="width: 100%;">View Inventory</button>
                    </a>
                </div>
    </div>

    <%- include("partials/footer") -%>