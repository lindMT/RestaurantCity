<%- include("partials/header") -%>

<!-- TODO: Add later to CSS file -->
<style>
    #add-ni-card {
        margin: auto;
        width: 600px;
    }
</style>
<div id="add-ni-card" class="card shadow">
    <div>
        <h1 style="text-align: center; padding: 5px;">Record First Purchase</h1>
    </div>
    <hr/>
    <!-- TODO: Add DIV CLASS -> Body of New Ingredient -->
    <div>
        <p style="text-align: center;">Fill-out the fields by inputting the details of the ingredient.</p>
        <p style="text-align: center;">If the ingredient to be recorded has ALREADY BEEN BOUGHT before, proceed to <a href="#">Record Purchase</a>; If it does not exist in the inventory, proceed to <a href="#">Add Ingredient</a></p></p>
        <br/>
    </div>
    <form method="post" action="#">
        <div class="form-group form-align-left">
            <label>Sizing Option Name <i>(Optional)</i></label>
            <input type="text" name="ingreVariantName" placeholder="e.g. Small, Large, Coke Sakto" min="1" class="form-control" style="text-align: left; width: 100%;">
        </div>
        <br/>

        <div class="form-group form-align-left">
            <label>Net Weight</label>
            <!-- TODO: CSS - Translate Style -->
            <input type="number" name="ingreNetWt" placeholder="Minimum: 1" min="1" class="form-control" style="text-align: left; width: 100%;" required>
        </div>
        <br/>

        <!-- TODO: Category is NEEDED FOR THIS -->
        <div class="form-group form-align-left">
            <label>Unit</label>
            <select id="add-ni-unit" name="ingreUnit" class="form-select form-select-md" style="width: 100%;" required>
                <option disabled selected value> -- Select Unit -- </option>
                <!-- TODO: REMOVE THESE -->
                <% if (ingredient.category === "wet") { %>
                    <option value="mL">mL (Milliliters)</option>
                    <option value="L">L (Liters)</option>
                <% } else { %>
                    <option value="g">g (Grams)</option>
                    <option value="kg">kg (Kilograms)</option>
                <% } %>
            </select>
        </div>
        <br/>
        <hr/>

        <button type="submit" class="btn btn-submit-count" style="width: 100%;">Record First Purchase</button>
    </form>

    <button class="btn btn-secondary" style="color:white; width: 100%;" onclick="history.back()">Return to Previous page</button>
</div>

