<%- include("partials/header") -%>
    <style>
        /* Other CSS styles... */
        /* New CSS style for the button container */
        
        .button-container {
            display: flex;
            flex-direction: column;
            gap: 10px;
            margin-top: 20px;
        }
        
        .btn-view-inventory {
            background-color: white;
            color: black;
            border: 1px solid black;
        }
    </style>
    <div class="physical-card-holder">
        <div class="card shadow physical-card">
            <div class="physical-header">
                <h1>Physical Count Results</h1>
            </div>
            <hr/>
            <!-- <p style="color:red; text-align: center; font-size: 20px;">
            <b><%= message %></b>
        </p> -->

            <br/>

            <% let nonZeroMismatchExists = false; %>
                <% if (mismatches && mismatches.length > 0) { %>

                    <% for (const mismatch of mismatches) { %>
                        <% if (mismatch.difference !== 0) { %>
                            <% nonZeroMismatchExists = true; %>
                                <h4 style="text-transform: uppercase;"><b><%= mismatch.ingredientName %></b></h4>
                                <hr/>
                                <div id="physical-whole-div" class="center-table">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th scope="col">Total Net Weight</th>
                                                <th>Net Weight Difference</th>
                                            </tr>
                                        </thead>
                                        <tbody id="physical-tbl-body">
                                            <tr>
                                                <td>
                                                    <%= mismatch.mainIngredientTotalNetWeight %>
                                                        <%= mismatch.unitSymbol %>
                                                </td>
                                                <td>
                                                    <%= mismatch.difference %>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                                <% } %>
                                    <% } %>
                                        <% } %>

                                            <% if (!nonZeroMismatchExists) { %>
                                                <div class="center-table">
                                                    <p style="font-size: 20px;">No mismatches found.</p>
                                                </div>
                                                <% } %>

                                                    <div class="button-container">
                                                        <a href="#">
                                                            <button class="btn btn-submit-count" style="width: 100%;">Report Mismatch</button>
                                                        </a>
                                                        <a href="/inputPhysicalCount">
                                                            <button class="btn btn-submit-count btn-view-inventory" style="width: 100%;">Input Physical Count</button>
                                                        </a>
                                                    </div>
        </div>
    </div>
    <%- include("partials/footer") -%>